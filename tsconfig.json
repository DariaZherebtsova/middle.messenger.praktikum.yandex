{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2016",
    "lib": ["dom", "es2018"],
    "declaration": false,
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types"
    ],
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
  ]
}